<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="001" author="w">
        <createTable tableName="link">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="original_url" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="short_url" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_short_url"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>